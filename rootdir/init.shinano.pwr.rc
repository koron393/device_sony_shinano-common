on charger
    # Enable Power modes and set the CPU Freq Sampling rates
    write /sys/module/msm_thermal/core_control/enabled 0
    write /sys/devices/system/cpu/cpu1/online 1
    write /sys/devices/system/cpu/cpu2/online 1
    write /sys/devices/system/cpu/cpu3/online 1
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor "powersave"
    write /sys/devices/system/cpu/cpu1/cpufreq/scaling_governor "powersave"
    write /sys/devices/system/cpu/cpu2/cpufreq/scaling_governor "powersave"
    write /sys/devices/system/cpu/cpu3/cpufreq/scaling_governor "powersave"
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq 300000
    write /sys/devices/system/cpu/cpu1/cpufreq/scaling_min_freq 300000
    write /sys/devices/system/cpu/cpu2/cpufreq/scaling_min_freq 300000
    write /sys/devices/system/cpu/cpu3/cpufreq/scaling_min_freq 300000
    write /sys/module/msm_thermal/core_control/enabled 1
    write /sys/devices/system/cpu/cpu1/online 0
    write /sys/devices/system/cpu/cpu2/online 0
    write /sys/devices/system/cpu/cpu3/online 0

on boot
    # Disable thermal
    write /sys/module/msm_thermal/core_control/enabled 0

    # Device boots with performance governor.
    # Switch one core to alucard to set permissions, for power hal and system server.
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor "alucard"
    chown system system /dev/cpuctl/cpu.notify_on_migrate
    chmod 0660 /dev/cpuctl/cpu.notify_on_migrate
    chown root system /sys/devices/system/cpu/cpu1/online
    chown root system /sys/devices/system/cpu/cpu2/online
    chown root system /sys/devices/system/cpu/cpu3/online
    chmod 664 /sys/devices/system/cpu/cpu1/online
    chmod 664 /sys/devices/system/cpu/cpu2/online
    chmod 664 /sys/devices/system/cpu/cpu3/online

    # Bring CPUs online
    write /sys/devices/system/cpu/cpu0/online 1
    write /sys/devices/system/cpu/cpu1/online 1
    write /sys/devices/system/cpu/cpu2/online 1
    write /sys/devices/system/cpu/cpu3/online 1

on property:init.svc.bootanim=stopped
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor "alucard"
    write /sys/devices/system/cpu/cpu1/cpufreq/scaling_governor "alucard"
    write /sys/devices/system/cpu/cpu2/cpufreq/scaling_governor "alucard"
    write /sys/devices/system/cpu/cpu3/cpufreq/scaling_governor "alucard"
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq 300000
    write /sys/devices/system/cpu/cpu1/cpufreq/scaling_min_freq 300000
    write /sys/devices/system/cpu/cpu2/cpufreq/scaling_min_freq 300000
    write /sys/devices/system/cpu/cpu3/cpufreq/scaling_min_freq 300000
    write /sys/class/kgsl/kgsl-3d0/devfreq/governor "msm-adreno-tz"
    write /dev/cpuctl/cpu.notify_on_migrate 1

    # Enable thermal
    write /sys/module/msm_thermal/core_control/enabled 1

    # Switch to alucard and let PowerHAL configure it
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor "alucard"
    chown system system /sys/devices/system/cpu/cpufreq/alucard/cpus_down_rate
    chmod 0644 /sys/devices/system/cpu/cpufreq/alucard/cpus_down_rate
    chown system system /sys/devices/system/cpu/cpufreq/alucard/cpus_up_rate
    chmod 0644 /sys/devices/system/cpu/cpufreq/alucard/cpus_up_rate
    chown system system /sys/devices/system/cpu/cpufreq/alucard/dec_cpu_load
    chmod 0644 /sys/devices/system/cpu/cpufreq/alucard/dec_cpu_load
    chown system system /sys/devices/system/cpu/cpufreq/alucard/dec_cpu_load_at_min_freq
    chmod 0644 /sys/devices/system/cpu/cpufreq/alucard/dec_cpu_load_at_min_freq
    chown system system /sys/devices/system/cpu/cpufreq/alucard/freq_responsiveness
    chmod 0644 /sys/devices/system/cpu/cpufreq/alucard/freq_responsiveness
    chown system system /sys/devices/system/cpu/cpufreq/alucard/inc_cpu_load
    chmod 0644 /sys/devices/system/cpu/cpufreq/alucard/inc_cpu_load
    chown system system /sys/devices/system/cpu/cpufreq/alucard/inc_cpu_load_at_min_freq
    chmod 0644 /sys/devices/system/cpu/cpufreq/alucard/inc_cpu_load_at_min_freq
    chown system system /sys/devices/system/cpu/cpufreq/alucard/io_is_busy
    chmod 0644 /sys/devices/system/cpu/cpufreq/alucard/io_is_busy
    chown system system /sys/devices/system/cpu/cpufreq/alucard/pump_dec_step_1
    chmod 0644 /sys/devices/system/cpu/cpufreq/alucard/pump_dec_step_1
    chown system system /sys/devices/system/cpu/cpufreq/alucard/pump_dec_step_2
    chmod 0644 /sys/devices/system/cpu/cpufreq/alucard/pump_dec_step_2
    chown system system /sys/devices/system/cpu/cpufreq/alucard/pump_dec_step_3
    chmod 0644 /sys/devices/system/cpu/cpufreq/alucard/pump_dec_step_3
    chown system system /sys/devices/system/cpu/cpufreq/alucard/pump_dec_step_4
    chmod 0644 /sys/devices/system/cpu/cpufreq/alucard/pump_dec_step_4
    chown system system /sys/devices/system/cpu/cpufreq/alucard/pump_inc_step_1
    chmod 0644 /sys/devices/system/cpu/cpufreq/alucard/pump_inc_step_1
    chown system system /sys/devices/system/cpu/cpufreq/alucard/pump_inc_step_2
    chmod 0644 /sys/devices/system/cpu/cpufreq/alucard/pump_inc_step_2
    chown system system /sys/devices/system/cpu/cpufreq/alucard/pump_inc_step_3
    chmod 0644 /sys/devices/system/cpu/cpufreq/alucard/pump_inc_step_3
    chown system system /sys/devices/system/cpu/cpufreq/alucard/pump_inc_step_4
    chmod 0644 /sys/devices/system/cpu/cpufreq/alucard/pump_inc_step_4
    chown system system /sys/devices/system/cpu/cpufreq/alucard/pump_inc_step_at_min_freq_1
    chmod 0644 /sys/devices/system/cpu/cpufreq/alucard/pump_inc_step_at_min_freq_1
    chown system system /sys/devices/system/cpu/cpufreq/alucard/pump_inc_step_at_min_freq_2
    chmod 0644 /sys/devices/system/cpu/cpufreq/alucard/pump_inc_step_at_min_freq_2
    chown system system /sys/devices/system/cpu/cpufreq/alucard/pump_inc_step_at_min_freq_3
    chmod 0644 /sys/devices/system/cpu/cpufreq/alucard/pump_inc_step_at_min_freq_3
    chown system system /sys/devices/system/cpu/cpufreq/alucard/pump_inc_step_at_min_freq_4
    chmod 0644 /sys/devices/system/cpu/cpufreq/alucard/pump_inc_step_at_min_freq_4
    chown system system /sys/devices/system/cpu/cpufreq/alucard/sampling_rate
    chmod 0644 /sys/devices/system/cpu/cpufreq/alucard/sampling_rate
    chown system system /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq
    chmod 0644 /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq
    chown system system /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq
    chmod 0644 /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq

    # configure core_ctl module parameters
    chown system system /sys/devices/system/cpu/cpu0/core_ctl/max_cpus
    chmod 0644 /sys/devices/system/cpu/cpu0/core_ctl/max_cpus
    chown system system /sys/devices/system/cpu/cpu0/core_ctl/min_cpus
    chmod 0644 /sys/devices/system/cpu/cpu0/core_ctl/min_cpus
    chown system system /sys/devices/system/cpu/cpu0/core_ctl/busy_up_thres
    chmod 0644 /sys/devices/system/cpu/cpu0/core_ctl/busy_up_thres
    chown system system /sys/devices/system/cpu/cpu0/core_ctl/busy_down_thres
    chmod 0644 /sys/devices/system/cpu/cpu0/core_ctl/busy_down_thres
    chown system system /sys/devices/system/cpu/cpu0/core_ctl/offline_delay_ms
    chmod 0644 /sys/devices/system/cpu/cpu0/core_ctl/offline_delay_ms
    chown system system /sys/devices/system/cpu/cpu0/core_ctl/is_big_cluster
    chmod 0644 /sys/devices/system/cpu/cpu0/core_ctl/is_big_cluster
    chown system system /sys/devices/system/cpu/cpu0/core_ctl/task_thres
    chmod 0644 /sys/devices/system/cpu/cpu0/core_ctl/task_thres

    chown system system /sys/devices/system/cpu/cpu1/core_ctl/max_cpus
    chmod 0644 /sys/devices/system/cpu/cpu1/core_ctl/max_cpus
    chown system system /sys/devices/system/cpu/cpu1/core_ctl/min_cpus
    chmod 0644 /sys/devices/system/cpu/cpu1/core_ctl/min_cpus
    chown system system /sys/devices/system/cpu/cpu1/core_ctl/busy_up_thres
    chmod 0644 /sys/devices/system/cpu/cpu1/core_ctl/busy_up_thres
    chown system system /sys/devices/system/cpu/cpu1/core_ctl/busy_down_thres
    chmod 0644 /sys/devices/system/cpu/cpu1/core_ctl/busy_down_thres
    chown system system /sys/devices/system/cpu/cpu1/core_ctl/offline_delay_ms
    chmod 0644 /sys/devices/system/cpu/cpu1/core_ctl/offline_delay_ms
    chown system system /sys/devices/system/cpu/cpu1/core_ctl/is_big_cluster
    chmod 0644 /sys/devices/system/cpu/cpu1/core_ctl/is_big_cluster
    chown system system /sys/devices/system/cpu/cpu1/core_ctl/task_thres
    chmod 0644 /sys/devices/system/cpu/cpu1/core_ctl/task_thres

    chown system system /sys/devices/system/cpu/cpu2/core_ctl/max_cpus
    chmod 0644 /sys/devices/system/cpu/cpu2/core_ctl/max_cpus
    chown system system /sys/devices/system/cpu/cpu2/core_ctl/min_cpus
    chmod 0644 /sys/devices/system/cpu/cpu2/core_ctl/min_cpus
    chown system system /sys/devices/system/cpu/cpu2/core_ctl/busy_up_thres
    chmod 0644 /sys/devices/system/cpu/cpu2/core_ctl/busy_up_thres
    chown system system /sys/devices/system/cpu/cpu2/core_ctl/busy_down_thres
    chmod 0644 /sys/devices/system/cpu/cpu2/core_ctl/busy_down_thres
    chown system system /sys/devices/system/cpu/cpu2/core_ctl/offline_delay_ms
    chmod 0644 /sys/devices/system/cpu/cpu2/core_ctl/offline_delay_ms
    chown system system /sys/devices/system/cpu/cpu2/core_ctl/is_big_cluster
    chmod 0644 /sys/devices/system/cpu/cpu2/core_ctl/is_big_cluster
    chown system system /sys/devices/system/cpu/cpu2/core_ctl/task_thres
    chmod 0644 /sys/devices/system/cpu/cpu2/core_ctl/task_thres

    chown system system /sys/devices/system/cpu/cpu3/core_ctl/max_cpus
    chmod 0644 /sys/devices/system/cpu/cpu3/core_ctl/max_cpus
    chown system system /sys/devices/system/cpu/cpu3/core_ctl/min_cpus
    chmod 0644 /sys/devices/system/cpu/cpu3/core_ctl/min_cpus
    chown system system /sys/devices/system/cpu/cpu3/core_ctl/busy_up_thres
    chmod 0644 /sys/devices/system/cpu/cpu3/core_ctl/busy_up_thres
    chown system system /sys/devices/system/cpu/cpu3/core_ctl/busy_down_thres
    chmod 0644 /sys/devices/system/cpu/cpu3/core_ctl/busy_down_thres
    chown system system /sys/devices/system/cpu/cpu3/core_ctl/offline_delay_ms
    chmod 0644 /sys/devices/system/cpu/cpu3/core_ctl/offline_delay_ms
    chown system system /sys/devices/system/cpu/cpu3/core_ctl/is_big_cluster
    chmod 0644 /sys/devices/system/cpu/cpu3/core_ctl/is_big_cluster
    chown system system /sys/devices/system/cpu/cpu3/core_ctl/task_thres
    chmod 0644 /sys/devices/system/cpu/cpu3/core_ctl/task_thres

    write /sys/devices/system/cpu/cpu0/core_ctl/max_cpus 1
    write /sys/devices/system/cpu/cpu0/core_ctl/min_cpus 0
    write /sys/devices/system/cpu/cpu0/core_ctl/busy_up_thres 60
    write /sys/devices/system/cpu/cpu0/core_ctl/busy_down_thres 40
    write /sys/devices/system/cpu/cpu0/core_ctl/offline_delay_ms 100
    write /sys/devices/system/cpu/cpu0/core_ctl/task_thres 30

    write /sys/devices/system/cpu/cpu1/core_ctl/max_cpus 1
    write /sys/devices/system/cpu/cpu1/core_ctl/min_cpus 0
    write /sys/devices/system/cpu/cpu1/core_ctl/busy_up_thres 60
    write /sys/devices/system/cpu/cpu1/core_ctl/busy_down_thres 40
    write /sys/devices/system/cpu/cpu1/core_ctl/offline_delay_ms 100
    write /sys/devices/system/cpu/cpu1/core_ctl/task_thres 30

    write /sys/devices/system/cpu/cpu2/core_ctl/max_cpus 1
    write /sys/devices/system/cpu/cpu2/core_ctl/min_cpus 0
    write /sys/devices/system/cpu/cpu2/core_ctl/busy_up_thres 60
    write /sys/devices/system/cpu/cpu2/core_ctl/busy_down_thres 40
    write /sys/devices/system/cpu/cpu2/core_ctl/offline_delay_ms 100
    write /sys/devices/system/cpu/cpu2/core_ctl/task_thres 30

    write /sys/devices/system/cpu/cpu3/core_ctl/max_cpus 1
    write /sys/devices/system/cpu/cpu3/core_ctl/min_cpus 0
    write /sys/devices/system/cpu/cpu3/core_ctl/busy_up_thres 60
    write /sys/devices/system/cpu/cpu3/core_ctl/busy_down_thres 40
    write /sys/devices/system/cpu/cpu3/core_ctl/offline_delay_ms 100
    write /sys/devices/system/cpu/cpu3/core_ctl/task_thres 30

    # Post-setup services
    rm /data/system/perfd/default_values
    setprop ro.min_freq_0 300000
    setprop ro.min_freq_1 300000
    setprop ro.min_freq_2 300000
    setprop ro.min_freq_3 300000
    start perfd
